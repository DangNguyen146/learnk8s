Vagrant.configure("2") do |config|
  config.vm.define "centos1" do |centos1|
    centos1.vm.box = "centos/7"
    centos1.vm.network "private_network", ip: "192.168.144.11"
    centos1.vm.provider "virtualbox" do |vb|
      vb.name = "centos1"
      vb.memory = "2048"
    end

    centos1.vm.provision "shell", inline: <<-SHELL
      # Thêm người dùng
      sudo useradd -m -s /bin/bash centos1
      
      # Đặt mật khẩu cho người dùng
      echo 'centos1:centos1' | sudo chpasswd
      
      # Cấp quyền sudo cho người dùng
      echo 'centos1 ALL=(ALL) NOPASSWD:ALL' | sudo tee /etc/sudoers.d/centos1
      sudo chmod 0440 /etc/sudoers.d/centos1

      # Thêm khóa công khai SSH
      mkdir -p /home/centos1/.ssh
      chmod 700 /home/centos1/.ssh
      echo 'ssh-rsa  black@dangnguyen' >> /home/centos1/.ssh/authorized_keys
      echo 'ssh-rsa  root@dangnguyen' >> /home/centos1/.ssh/authorized_keys
      chmod 600 /home/centos1/.ssh/authorized_keys
      chown -R centos1:centos1 /home/centos1/.ssh
    SHELL
  end

  config.vm.define "centos2" do |centos2|
    centos2.vm.box = "centos/7"
    centos2.vm.network "private_network", ip: "192.168.144.12"
    centos2.vm.provider "virtualbox" do |vb|
      vb.name = "centos2"
      vb.memory = "2048"
    end

    centos2.vm.provision "shell", inline: <<-SHELL
      # Thêm người dùng
      sudo useradd -m -s /bin/bash centos2
      
      # Đặt mật khẩu cho người dùng
      echo 'centos2:centos2' | sudo chpasswd
      
      # Cấp quyền sudo cho người dùng
      echo 'centos2 ALL=(ALL) NOPASSWD:ALL' | sudo tee /etc/sudoers.d/centos2
      sudo chmod 0440 /etc/sudoers.d/centos2

      # Thêm khóa công khai SSH
      mkdir -p /home/centos2/.ssh
      chmod 700 /home/centos2/.ssh
      echo 'ssh-rsa  black@dangnguyen' >> /home/centos2/.ssh/authorized_keys
      echo 'ssh-rsa  root@dangnguyen' >> /home/centos2/.ssh/authorized_keys
      chmod 600 /home/centos2/.ssh/authorized_keys
      chown -R centos2:centos2 /home/centos2/.ssh      
    SHELL
  end
end
